---
import Layout from "@layouts/Layout.astro";

---

<Layout title="aimlabs">
    <div class="bg-white py-6 sm:py-8 lg:py-12">
        <div class="mx-auto max-w-screen-2xl px-4 md:px-8">
            <!-- text - start -->
            <div class="mb-10 md:mb-16">
                <h2 class="mb-4 text-center text-2xl font-bold text-gray-800 md:mb-6 lg:text-3xl">
                    Aimlabs
                </h2>

                <input type="text" name="username" transition:name="username"></input>
                <button >Submit</button>
                
            </div>
            <!-- text - end -->

            <div class="grid gap-x-4 gap-y-8 sm:grid-cols-2 md:gap-x-6 lg:grid-cols-4 xl:grid-cols-6">

                
               <!--  {data.map ((leaderboard, index) => (
                    <div class="bg-gray-100 p-4 rounded-lg">
                        <h3 class="text-xl font-bold">{leaderboard.username}</h3>
                        <p class="text-gray-500">{leaderboard.score}</p>
                    </div>
                ))} -->
                
            </div>
        </div>
    </div>
</Layout>

<script>
    // on submit go to /aimlabs/username
    const $button = document.querySelector('button');
    $button?.addEventListener('click', () => {
        $button.disabled = true;
        const $input = document.querySelector('input');
        const username = $input?.value
        window.location.href = `/aimlabs/${username}`
    })

</script>